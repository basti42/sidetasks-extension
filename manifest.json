{

  "manifest_version": 2,
  "name": "Side Tasks",
  "description": "Daily tasks list",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "54.0a1",
      "id": "basti.addon.dev@gmail.com"
    }
  },

  "description": "Quick, easy and personal todo/note taking app for your browser of choice.",
  "homepage_url": "https://github.com/basti42/sidetasks",


  "sidebar_action": {
    "default_icon": "icons/pen_paper.png",
    "default_title" : "Side-Tasks",
    "default_panel": "sidebar/panel.html"
  },

  "permissions": ["storage", "tabs"],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}
